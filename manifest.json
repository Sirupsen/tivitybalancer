{
  "name": "tivitybalancer",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Button to redirect you to a random website from a list",
  "homepage_url": "http://sirupsen.com",
  "background": {
    "scripts": ["src/bg.js"]
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "options_page": "src/browser_action/browser_action.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": "icons/omphalos.png",
    "default_title": "Visit random site from list in options"
  }
}
